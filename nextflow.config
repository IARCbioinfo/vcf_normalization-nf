manifest {
    homePage = 'https://github.com/iarcbioinfo/vt-nf'
    description = 'Nextflow pipeline for vt normalization'
    mainScript = 'vt.nf'
}
process {
  container = 'iarcbioinfo/vt-nf'
}

params.output_folder="."

timeline {
  enabled = true
  file = "${params.output_folder}/nf-pipeline_info/vt-nf_timeline.html"
}

report {
  enabled = true
  file = "${params.output_folder}/nf-pipeline_info/vt-nf_report.html"
}

trace {
  enabled = true
  file = "${params.output_folder}/nf-pipeline_info/vt-nf_trace.txt"
}
